%{
    int letterCount = 0;
    int digitCount = 0;

    void printStuff() {
        printf("Letters: %d, Digits: %d\n", letterCount, digitCount);
    }
%}

%%

[a-zA-Z] {
    letterCount++;
    printStuff();
}

[0-9] {
    digitCount++;
    printStuff();
}

.

%%

int yywrap() {
    printf("Final Count:\n\tLetters: %d, Digits: %d\n", letterCount, digitCount);
    return 0;
}

int main() {
    yylex();
}
